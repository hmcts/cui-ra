{% extends "template.njk" %}

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block beforeContent %}
    {{ super() }}
    {{ govukBackLink({
        text: _t('back'),
        href: headers['referer']
    }) }}
{% endblock %}

{% block mainContent %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">Review the support you've requested</h1>

        <h2 class="govuk-heading-m">Reasonable Adjustments<h2>

        {{ govukTable({
            firstCellIsHeader: false,      
            rows: [
                [
                {
                    html: "<span class='govuk-!-font-weight-bold'>Name of Party</span>"
                },
                {
                    html: "Some random name that is really long and Some random name that is really long and"
                }
                ]
            ]
        }) }}

        {# Active or already requested #}
        <h3 class="govuk-heading-s">Support you've already requested</h3>
        {{ govukTable({
        firstCellIsHeader: false,      
        rows: [
            [
            {
                text: "Step free / wheelchair access"
            },
            {
                html: "<a class='govuk-link govuk-link--no-visited-state' href='#'>I no longer need this</a>",
                format: "numeric"
            }
            ]
        ]
        }) }}

        {# Newely requested #}
        <h3 class="govuk-heading-s">New support you want to request now</h3>
        {{ govukTable({
        firstCellIsHeader: false,      
        rows: [
            [
            {
                text: "Documents in large print"
            },
            {
                html: "<a class='govuk-link govuk-link--no-visited-state' href='#'>Change</a>",
                format: "numeric"
            }
            ],
            [
            {
                text: "Sign language interpreter"
            },
            {
                html: "<a class='govuk-link govuk-link--no-visited-state' href='#'>Change</a>",
                format: "numeric"
            }
            ]
        ]
        }) }}

        {# No longer required #}
        <h3 class="govuk-heading-s">Support you no longer need</h3>
        {{ govukTable({
        firstCellIsHeader: false,      
        rows: [
            [
            {
                text: "Other"
            },
            {
                html: "<a class='govuk-link govuk-link--no-visited-state' href='#'>I still need this</a>",
                format: "numeric"
            }
            ]
        ]
        }) }}

        {{ govukButton({
            text: "Add a new support request",
            classes: "govuk-button--secondary"
        }) }}

        <div class="govuk-button-group">
            {{ govukButton({
                text: "Submit",
                preventDoubleClick: true
            }) }}

            <a class="govuk-link govuk-link--no-visited-state" href="#">Cancel</a>
        </div>
    </div>
  </div>
{% endblock %}